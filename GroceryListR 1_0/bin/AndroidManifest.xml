<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tk4218.grocerylistr1_0"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/glrlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tk4218.grocerylistr1_0.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tk4218.grocerylistr1_0.RecipeViewActivity"
            android:label="@string/title_activity_recipe_view"
            android:parentActivityName="com.tk4218.grocerylistr1_0.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tk4218.grocerylistr1_0.MainActivity" />
        </activity>
        <activity
            android:name="com.tk4218.grocerylistr1_0.NewRecipeActivity"
            android:label="@string/title_activity_new_recipe"
            android:parentActivityName="com.tk4218.grocerylistr1_0.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tk4218.grocerylistr1_0.MainActivity" />
        </activity>
    </application>

</manifest>
